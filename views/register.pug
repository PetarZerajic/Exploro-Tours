extends base
block content 
        body 
          main(class="main")
            div(class="register-form")
                h2(class="heading-secondary ma-bt-lg") Create your  account
                form(class="form form--register")
                    div(class="form__group")
                        label(class="form__label" for='fullname') Fullname
                        input(id="fullname" class="form__input" type='text'  placeholder='fullname' required)
                    div(class="form__group")
                        label(class="form__label" for='email') Email address
                        input(id="email" class="form__input" type='email' placeholder='you@example.com' required)
                    div(class="form__group")
                        label(class="form__label" for='password') Password
                         input(id="password" class="form__input" type='password' placeholder='••••••••' required, minlength='8')
                    div(class="form__group")
                        label(class="form__label" for='passwordConfirm') Confirm Password
                         input(id="passwordConfirm" class="form__input" type='password' placeholder='••••••••' required minlength='8')
                    div(class="form__group")
                        button(class="btn btn--green") Sign up